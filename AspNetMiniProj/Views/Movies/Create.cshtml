@{
    ViewBag.Title = "Add movie";
}
@model CreateVM


    
    <form asp-controller="Movies" asp-action="Create" method="post">


    <label asp-for="Name" class="form-label" style="color:black">Name:</label>
    <input asp-for="Name" class="form-input" type="text" />
        <span asp-validation-for="Name" style="color: red"></span>

    <label asp-for="Description" class="form-label" style="color:black">Description:</label>
    <input asp-for="Description" class="form-input" type="text" />
        <span asp-validation-for="Description" style="color:red"></span>

    <div class="form-label"><button type="submit" class="submit-button">Save</button></div>
       
    </form>



@section scripts
{
    <script src="jquery/jquery.min.js"></script>
    <script src="jquery-validate/jquery.validate.min.js"></script>
    <script src="jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


